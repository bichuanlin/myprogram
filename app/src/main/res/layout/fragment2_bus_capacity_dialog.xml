<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@android:color/darker_gray"
      android:textColor="@color/colorWhite"
      android:id="@+id/tv_fragment2_dialog_title"
      android:text="公交载客情况统计"
      android:gravity="left|center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/layout_fragment2_dialog_title"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment2_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="序号"
            android:background="@drawable/textview_border_all"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="公交车编号"
            android:gravity="center"
            android:background="@drawable/textview_border_all"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="人数"
            android:background="@drawable/textview_border_all"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_fragment2_dialog_content"
        android:orientation="vertical"
       app:layout_constraintBottom_toTopOf="@+id/btn_fragment2_dialog_return"
        app:layout_constraintTop_toBottomOf="@id/layout_fragment2_dialog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
       <ListView
           android:layout_width="wrap_content"
           android:layout_height="300dp"
           android:id="@+id/listView_fragment2_dialog"
           ></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="合计"
                android:gravity="center"
                android:background="@drawable/textview_border_all"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/textview_border_all"
                android:id="@+id/tv_fragment2_dialog_bus_capacity"/>
        </LinearLayout>
    </LinearLayout>
   <Button
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:id="@+id/btn_fragment2_dialog_return"
       android:text="返回"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginTop="20dp"/>
</android.support.constraint.ConstraintLayout>